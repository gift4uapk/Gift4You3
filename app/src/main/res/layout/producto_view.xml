<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="9dp"
    android:layout_marginStart="9dp"
    android:layout_marginTop="8dp"
    android:id="@+id/producto_view_uno">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/uid_producto_regis"
        android:visibility="gone"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/descripcion_producto_regis"
        android:visibility="gone"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/subtitulo_producto_regis"
        android:visibility="gone"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/numero_producto_regis"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/titulo_producto_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/logo_regalo"
            android:id="@+id/imagen_principal_producto_regis"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/precio_producto_regis"
            android:text="Precio"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>